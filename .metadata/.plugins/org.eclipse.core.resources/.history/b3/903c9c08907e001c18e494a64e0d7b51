package entornos;

public class contar_letra {
	contar_letra [] cadena = new contar_letra[10];
	
	int contar_letra(char cadena[10], char letra) {
		int contador, n, longitud;
		n = 0; contador = 0;
		longitud = strlen(cadena);
		if(longitud > 0) {
			do {
				if(cadena[contador] == letra) {
					n++;
				}
				contador++;
				longitud--;
			}while (longitud > 0);
		}
		return n;
	}
}

package herencia.Ej3;

import java.util.Scanner;

public class Jefe {
	public Jefe() {
		RellenarDatosJefe();
		LeerDatosJefe();
	}
	
	public void RellenarDatosJefe() {
		Scanner teclado = new Scanner(System.in);
		System.out.print("Nombre: ");
		nombre = teclado.nextLine();
		System.out.print("Edad: ");
		edad = teclado.nextInt();
		incSueldo = 250;
		sueldoBase = 1000;
	}
	
	public void LeerDatosJefe() {
		System.out.println("Nombre jefe: "+nombre);
		System.out.println("Edad jefe: "+edad);
		System.out.println("incSueldo jefe: "+incSueldo);
		System.out.println("sueldoBase jefe: "+sueldoBase);
	}
}
